<%if (session.logged)  {%>
    <%- include("../../partials/header.ejs")%>
    <%} else {%>
    <%- include("../../partials/headerLoggedOut.ejs")%>
    <%};%>
   <h1><%= movie.title%></h1>
   <ul class="movie-list">
       <li><%= movie.year%></li>
       <li><%= movie.genre%></li>
   </ul>
   <img src="<%=movie.img%>">
   <a href="<%=movie._id%>/edit"><button class="button">Edit Movie</button></a>
   <form action="/comments" method="post">
    <input type="hidden" name="movie" value="<%=movie._id%>"/><br/>
    <input type="hidden" name="author" value="<%=session.userId%>"/><br/>
    <textarea name="content"></textarea><br/>
    <input type="submit" id="comment-btn" value="Post Comment"/>
  </form>
  <%for (let i = 0; i < comments.length; i++)  {%>
    <p><%=comments[i].content%></p>
    <%}%>
<%- include("../../partials/footer.ejs")%>
